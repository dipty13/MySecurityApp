<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.dnerd.dipty.mysecurityapp.SuccessfulTransaction">

    <TextView
        android:id="@+id/successTvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/lightorange"
        android:text="@string/header"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/successTvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="85dp"
        android:textColor="@color/lightorangedark"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/successTvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/lightorangedark"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/successTvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="155dp"
        android:textColor="@color/lightorangedark"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/successTvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="195dp"
        android:textColor="@color/lightorangedark"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/successBtnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="295dp"
        android:background="@drawable/buttonstylee"
        android:text="@string/see_transaction_location"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="italic"/>

</RelativeLayout>
